<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:id="@+id/toolbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:padding="@dimen/paddingToolbar">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_shopping_bag"
        android:layout_width="@dimen/imagenLogo"
        android:layout_height="@dimen/imagenLogo">
    </ImageView>
<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:textStyle="bold"
    android:layout_marginLeft="@dimen/margin_left_titulo_app"
    android:textSize="@dimen/titulo_app_size"
    android:layout_height="wrap_content"
    android:text="SHOPPING"
    android:id="@+id/titulo_toolbar">
</TextView>


</LinearLayout>





</androidx.appcompat.widget.Toolbar>
